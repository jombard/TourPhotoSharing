
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="photoModalLabel">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="modal-image">
                <img src="" alt="Tour Image" class="tour-img img-responsive"/>
            </div>
                <div class="container">
                    <div class="text-center img-controls">
                        <span class="btn btn-default prev">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Previous
                        </span>
                        <span class="btn btn-default star">
                            <i class="glyphicon glyphicon-star"></i>
                        </span>
                        <span class="btn btn-default next">
                            Next
                            <i class="glyphicon glyphicon-chevron-right"></i>
                        </span>
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-8">
                            <h2 class="modal-title"></h2>
                            <p class="lead">Uploaded by <span class="img-owner"></span></p>
                            <p>Photo taken on <span class="img-date"></span></p>
                        </div>
                        <div class="col-sm-4">
                            <div id="imgMap"></div>
                        </div>
                    </div>
                    
                </div>
            <div class="modal-footer">
                <div class="container">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

